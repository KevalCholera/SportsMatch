<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding7">

    <android.support.v7.widget.CardView
        android:id="@+id/cvElementHotelBookingClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_anim"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:orientation="vertical"
            android:padding="@dimen/padding7">

            <TextView
                android:id="@+id/tvElementHotelBookingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hotel_rajdhani_inc"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvElementHotelBookingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/_23_hours_12pm_11pm"
                android:textColor="@color/gray"
                android:textSize="@dimen/textSize13" />

            <TextView
                android:id="@+id/tvElementHotelBookingRoomType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2x_delux_room"
                android:textColor="@color/gray"
                android:textSize="@dimen/textSize13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvElementHotelBookingRoomAvailable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_10_rooms_available"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize13" />

                <TextView
                    android:id="@+id/tvElementHotelBookingAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_150"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize15"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>